<body>
<div class="container">
    <!-- Static navbar-->
    <div role="navigation" class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button><a href="/" class="navbar-brand">Estoy Bien App</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/v0/oauth2/authorize?client_id={client.id}&response_type=code&redirect_uri=https://agoo.com.co">Temporal Dialog</a></li>
                    <li><a href="/v0/clients">List of Clients</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown"><a href="#" data-toggle="dropdown" class="dropdown-toggle">Login as<span class="caret"></span></a>
                        <ul role="menu" class="dropdown-menu">
                            <li><a href="#">Administrator</a></li>
                            <li><a href="#">APIs Client</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.nav-collapse-->
        </div>
        <!-- /.container-fluid-->
    </div>
    <!-- Main component for a primary marketing message or call to action-->
    <div class="jumbotron">
        <div class="container">
            <form role="form" action="/v0/oauth2/authorize" method="post" class="form-signin">
                <h2>Hi {{{user.email}}}</h2>
                <input type="hidden" name="transaction_id" value="{{{transactionID}}}">
                <p><b> {{{client.name}}} </b> is requesting <b>full access </b> to your account</p>
                <p>
                    <input type="submit" value="Allow" id="allow" class="btn btn-primary">
                    <input type="submit" value="Deny" name="cancel" id="deny" class="btn btn-danger">
                </p>
            </form>
        </div>
    </div>
</div>
